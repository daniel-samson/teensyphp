{
  "name": "daniel-samson/teensyphp",
  "description": "The minimalists web framework",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "autoload": {
    "files": [
      "src/stop.php",
      "src/router.php",
      "src/request.php",
      "src/response.php",
      "src/middleware.php",
      "src/template.php",
      "src/fs.php"
    ],
    "psr-4": {
      "TeensyPHP\\": "src/",
      "TeensyPHPTests\\": "tests/App"
    }
  },
  "bin": [
    "bin/teensyphp"
  ],
  "require-dev": {
    "phpunit/phpunit": "12.4.4"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test-debug": "./vendor/bin/phpunit --debug",
    "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --bootstrap vendor/autoload.php --coverage-text --stderr -- tests",
    "coverage-html": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --bootstrap vendor/autoload.php --coverage-html coverage --stderr -- tests"
  }
}
