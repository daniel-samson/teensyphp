{
  "name": "daniel-samson/teensyphp",
  "description": "The minimalists web framework",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "require": {
    "php": ">=8.3",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "TeensyPhp\\Tests\\": "tests/TeensyPhp/",
      "TeensyPhp\\": "src/TeensyPHP/"
    },
    "files": [
      "src/stop.php",
      "src/router.php",
      "src/request.php",
      "src/response.php",
      "src/middleware.php",
      "src/template.php",
      "src/database.php"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "10.5.7"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "coverage": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --coverage-text --stderr -- tests"
  }
}
